{% extends 'painel/anuncios/form.twig' %}

{% block exemplo_descricao %}{% endblock %}

{% block caracteristicas_do_veiculo %}
<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="chave_marca">Marca</label>
			<div class="controls">
				<select id="chave_marca" name="chave_marca">
					<option value="null"></option>
					{% for marca in tipo_veiculo.marcas.find_many %}
					<option value="{{ marca.cod_marca }}"{% if veiculo.chave_marca == marca.cod_marca %} selected="selected"{% endif %}>{{ marca.descricao }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="modelo">Modelo</label>
			<div class="controls">
				<input type="text" name="modelo" id="modelo" value="{{ veiculo.modelo }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="ano">Ano</label>
			<div class="controls">
				<select id="ano" name="ano">
					<option value="null"></option>
					{% for ano in ('now' | date('Y'))..1960 %}
					<option value="{{ ano }}"{% if veiculo.ano == ano %} selected="selected"{% endif %}>{{ ano }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="portas">Portas</label>
			<div class="controls">
				<select id="portas" name="portas">
					<option value="null"></option>
					{% for portas in 1..5 %}
					<option value="{{ portas }}"{% if veiculo.portas == portas %} selected="selected"{% endif %}>{{ portas }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="quilometros">Quilômetros</label>
			<div class="controls">
				<input type="text" id="quilometros" name="quilometros" value="{{ veiculo.quilometros }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="combustivel">Combustível</label>
			<div class="controls">
				<select id="combustivel" name="combustivel">
					<option value="null"></option>
					{% for combustivel in combustiveis %}
					<option value="{{ combustivel }}"{% if veiculo.combustivel == combustivel %} selected="selected"{% endif %}>{{ combustivel }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="direcao">Direção</label>
			<div class="controls">
				<select id="direcao" name="direcao">
					<option value="null"></option>
					{% for direcao in direcoes %}
					<option value="{{ direcao }}"{% if veiculo.direcao == direcao %} selected="selected"{% endif %}>{{ direcao }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="">Transmissão</label>
			<div class="controls">
				<select id="transmissao" name="transmissao">
					<option value="null"></option>
					{% for transmissao in transmissoes %}
					<option value="{{ transmissao }}"{% if veiculo.transmissao == transmissao %} selected="selected"{% endif %}>{{ transmissao }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="">Cor</label>
			<div class="controls">
				<select id="cor" name="cor">
					<option value="null"></option>
					{% for cor in cores %}
					<option value="{{ cor }}"{% if veiculo.cor == cor %} selected="selected"{% endif %}>{{ cor }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="unico_dono">Único dono?</label>
			<div class="controls">
				<select id="unico_dono" name="unico_dono">
					<option value="null"></option>
					<option value="true"{% if veiculo.unico_dono is not null and veiculo.unico_dono == true %} selected="selected"{% endif %}>Sim</option>
					<option value="false"{% if veiculo.unico_dono is not null and veiculo.unico_dono == false %} selected="selected"{% endif %}>Não</option>
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="novo">Condições do veículo</label>
			<div class="controls">
				<select id="novo" name="novo">
					<option value="null"></option>
					<option value="true"{% if veiculo.novo is not null and veiculo.novo == true %} selected="selected"{% endif %}>Novo</option>
					<option value="false"{% if veiculo.novo is not null and veiculo.novo == false %} selected="selected"{% endif %}>Usado</option>
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="valor">Valor (R$)</label>
			<div class="controls">
				<input type="text" id="valor" name="valor" value="{{ veiculo.valor }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="valor_promocional">Valor promocional (R$)</label>
			<div class="controls">
				<input type="text" id="valor_promocional" name="valor_promocional" value="{{ veiculo.valor_promocional }}" />
			</div>
		</div>
	</div>
</div>
{% endblock %}