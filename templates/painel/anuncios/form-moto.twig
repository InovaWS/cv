{% extends 'painel/anuncios/form.twig' %}

{% set sistemas_de_freios = ['Disco Dianteiro', 'Disco Traseiro', 'Dianteiro e Traseiro'] %}
{% set tipos_de_motor = ['2 Tempos', '4 Tempos'] %}
{% set sistemas_de_partida = ['Elétrico', 'Elétrico e Pedal', 'Pedal', 'Outro'] %}
{% set alarmes = ['Sim', 'Não'] %}
{% set cores = ['Amarelo', 'Azul', 'Branco', 'Cinza', 'Dourado', 'Laranja', 'Prata',
				'Preto', 'Verde', 'Vermelho', 'Vinho', 'Outro'] %}

{% block exemplo_descricao %}(ex. Honda Fan 125, Twister 250, Hornet){% endblock %}

{% block caracteristicas_do_veiculo %}
<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="chave_marca">Marca</label>
			<div class="controls">
				<select id="chave_marca" name="chave_marca">
					<option value="null"></option>
					{% for marca in tipo_veiculo.marcas.find_many %}
					<option value="{{ marca.cod_marca }}"{% if veiculo.chave_marca == marca.cod_marca %} selected="selected"{% endif %}>{{ marca.descricao }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="modelo">Modelo</label>
			<div class="controls">
				<input type="text" name="modelo" id="modelo" value="{{ veiculo.modelo }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="ano">Ano</label>
			<div class="controls">
				<select id="ano" name="ano">
					<option value="null"></option>
					{% for ano in ('now' | date('Y'))..1960 %}
					<option value="{{ ano }}"{% if veiculo.ano == ano %} selected="selected"{% endif %}>{{ ano }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="quilometros">Quilômetros</label>
			<div class="controls">
				<input type="text" id="quilometros" name="quilometros" value="{{ veiculo.quilometros }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="freios">Freios</label>
			<div class="controls">
				<select id="freios" name="freios">
					<option value="null"></option>
					{% for freios in sistemas_de_freios %}
					<option value="{{ freios }}"{% if veiculo.freios == freios %} selected="selected"{% endif %}>{{ freios }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="tipo_motor">Tipo de motor</label>
			<div class="controls">
				<select id="tipo_motor" name="tipo_motor">
					<option value="null"></option>
					{% for tipo_motor in tipos_de_motor %}
					<option value="{{ tipo_motor }}"{% if veiculo.tipo_motor == tipo_motor %} selected="selected"{% endif %}>{{ tipo_motor }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="partida">Sistema de partida</label>
			<div class="controls">
				<select id="partida" name="partida">
					<option value="null"></option>
					{% for partida in sistemas_de_partida %}
					<option value="{{ partida }}"{% if veiculo.partida == partida %} selected="selected"{% endif %}>{{ partida }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>

	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="cor">Cor</label>
			<div class="controls">
				<select id="cor" name="cor">
					<option value="null"></option>
					{% for cor in cores %}
					<option value="{{ cor }}"{% if veiculo.cor == cor %} selected="selected"{% endif %}>{{ cor }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="alarme">Alarme</label>
			<div class="controls">
				<select id="alarme" name="alarme">
					<option value="null"></option>
					{% for alarme in alarmes %}
					<option value="{{ alarme }}"{% if veiculo.alarme == alarme %} selected="selected"{% endif %}>{{ alarme }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="unico_dono">Único dono?</label>
			<div class="controls">
				<select id="unico_dono" name="unico_dono">
					<option value="null"></option>
					<option value="true"{% if veiculo.unico_dono is not null and veiculo.unico_dono == true %} selected="selected"{% endif %}>Sim</option>
					<option value="false"{% if veiculo.unico_dono is not null and veiculo.unico_dono == false %} selected="selected"{% endif %}>Não</option>
				</select>
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="novo">Condições do veículo</label>
			<div class="controls">
				<select id="novo" name="novo">
					<option value="null"></option>
					<option value="true"{% if veiculo.novo is not null and veiculo.novo == true %} selected="selected"{% endif %}>Novo</option>
					<option value="false"{% if veiculo.novo is not null and veiculo.novo == false %} selected="selected"{% endif %}>Usado</option>
				</select>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="valor">Valor (R$)</label>
			<div class="controls">
				<input type="text" id="valor" name="valor" value="{{ veiculo.valor }}" />
			</div>
		</div>
	</div>
	
	<div class="span4">
		<div class="control-group">
			<label class="control-label" for="valor_promocional">Valor promocional (R$)</label>
			<div class="controls">
				<input type="text" id="valor_promocional" name="valor_promocional" value="{{ veiculo.valor_promocional }}" />
			</div>
		</div>
	</div>
</div>
{% endblock %}